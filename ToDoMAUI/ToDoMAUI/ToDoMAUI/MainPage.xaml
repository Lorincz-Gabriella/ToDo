<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:vm="clr-namespace:ToDoMAUI.ViewModel"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ToDoMAUI.Models"
             xmlns:dtos="clr-namespace:ToDoMAUI.Models.DTOs"
             x:DataType="vm:MainViewModel"
             Title="{Binding Title}"
             x:Class="ToDoMAUI.MainPage">

    <Grid RowDefinitions="*, Auto"  >
        <RefreshView Grid.Row="0" Command="{Binding GetToDosCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Todos}" >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="dtos:GetToDoItemDTO">
                        <Frame Padding="10" Margin="10">
                        <Grid RowDefinitions="auto,auto,auto" ColumnDefinitions="*,auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Name}" FontSize="Default" FontAttributes="Bold"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding Description}"/>
                            <Label Grid.Row="2" Grid.Column="0" Text="{Binding Status}" FontAttributes="Italic"/>
                            <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Text="Delete" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}},Path=DeleteToDoCommand}" CommandParameter="{Binding Id}">
                            </Button>
                        </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        <ActivityIndicator Grid.Row="1" IsRunning="{Binding IsBusy}" IsVisible="Visible" HorizontalOptions="Center" VerticalOptions="Center">
        </ActivityIndicator>
    </Grid>

</ContentPage>
    